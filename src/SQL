Create database HormonikaDB;
use HormonikaDB

CREATE TABLE Hairdresser(
id int primary key auto_increment,
name varchar(100),
Username Varchar(100),
Password Varchar(100)
);

CREATE TABLE Customer(
name varchar(100),
PhoneNUM Varchar(20) primary key
);

CREATE TABLE Booking(
id int primary key auto_increment,
name Varchar(100),
PhoneNum Varchar(20),
Date datetime,
Time datetime,
HaircutType enum('MANCUT', 'WOMANCUT', 'CHILDCUT', 'COLOUR', 'PERM', 'BEARD', 'OTHER'),
Hairdresser int,
Description varchar(500),
status enum('ACTIVE', 'CANCEL', 'FINISH'),
foreign key(PhoneNum) references customer(PhoneNUM),
foreign key(Hairdresser) references hairdresser(id)
);

insert into hairdresser(name, Username, password)
