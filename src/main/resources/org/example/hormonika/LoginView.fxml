<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<VBox xmlns="http://javafx.com/javafx"
      xmlns:fx="http://javafx.com/fxml"
      fx:controller="org.example.hormonika.LoginController"
      spacing="10" alignment="CENTER" style="-fx-padding: 20;">

    <Label text="Login" style="-fx-font-size: 20;" />

    <TextField fx:id="usernameField" promptText="Brugernavn" />
    <PasswordField fx:id="passwordField" promptText="Adgangskode" />

    <Button text="Login" onAction="#onLogin" />
    <Label fx:id="errorLabel" textFill="red" />

</VBox>
